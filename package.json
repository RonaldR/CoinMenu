{
  "name": "coinmenu",
  "version": "0.3.0",
  "description": "Cryptocoins in your menubar",
  "repository": {
    "type": "git",
    "url": "https://github.com/RonaldR/CoinMenu.git"
  },
  "license": "MIT",
  "dependencies": {
    "date-fns": "^1.30.1",
    "electron-compile": "^6.4.4",
    "menubar": "^5.2.3",
    "vue": "^2.6.6",
    "vue-clipboard2": "^0.3.0",
    "vue-router": "^3.0.2",
    "vue2-filters": "^0.4.1",
    "vuex": "^3.1.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-plugin-e2e-cypress": "^3.4.0",
    "@vue/cli-plugin-eslint": "^3.4.0",
    "@vue/cli-plugin-unit-jest": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "@vue/eslint-config-airbnb": "^3.0.5",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^22.4.4",
    "codacy-coverage": "^2.1.0",
    "electron-prebuilt-compile": "1.8.2",
    "node-sass": "^4.11.0",
    "sass-loader": "^6.0.6",
    "vue-template-compiler": "^2.6.6"
  },
  "main": "src/electron-main.js",
  "scripts": {
    "start": "electron .",
    "start-build": "vue-cli-service build && electron .",
    "start-forge": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "vue-cli-service test",
    "test-with-coverage": "vue-cli-service test --coverage && cat ./coverage/lcov.info | codacy-coverage --token aa57380e613d4538b5b874d69de9476c",
    "e2e": "vue-cli-service e2e",
    "e2e:open": "vue-cli-service e2e:open",
    "now-publish": "yarn build && cp now.json dist/now.json && cd dist && now --public"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "dmg"
        ],
        "linux": [
          "deb"
        ]
      },
      "electronPackagerConfig": {
        "icon": "./src/assets/icons/icon.icns"
      },
      "electronWinstallerConfig": {
        "name": "CoinMenu",
        "appDirectory": "./",
        "authors": "Ronald Runia",
        "iconUrl": "icon.ico",
        "setupIcon": "icon.ico"
      },
      "electronInstallerDebian": {
        "dest": "out/installers/",
        "icon": "src/assets/icons/icon.icns",
        "categories": [
          "Utility"
        ],
        "lintianOverrides": [
          "changelog-file-missing-in-native-package"
        ]
      },
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "RonaldR",
        "name": "CoinMenu",
        "prerelease": true,
        "draft": false
      },
      "windowsStoreConfig": {
        "packageName": ""
      }
    }
  }
}
